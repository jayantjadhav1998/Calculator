<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:background="@color/gray"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="40pt"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:layout_marginBottom="1pt"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/butAC"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="AC"
                android:onClick="acEvent"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"/>
            <Button
                android:id="@+id/butplusMinus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="+/-"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"/>
            <Button
                android:id="@+id/butDivide"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:onClick="operatorEvent"
                android:text="/"
                android:background="@color/blueback"/>
            <Button
                android:id="@+id/butMultiply"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:onClick="operatorEvent"
                android:layout_height="30pt"
                android:text="*"
                android:background="@color/colorAccent"/>

        </TableRow>
        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/but7"
                android:onClick="numberEvent"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="7"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"/>
            <Button
                android:id="@+id/but8"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="8"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"/>
            <Button
                android:id="@+id/but9"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:onClick="numberEvent"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:text="9"
                android:background="@color/blueback"/>
            <Button
                android:id="@+id/butPercentage"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="perEvent"
                android:text="%"
                android:background="@color/colorAccent"/>

        </TableRow>
        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/but4"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:onClick="numberEvent"
                android:layout_height="30pt"
                android:text="4"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"/>
            <Button
                android:id="@+id/but5"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="5"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"

                android:background="@color/blueback"/>
            <Button
                android:id="@+id/but6"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:text="6"
                android:background="@color/blueback"/>
            <Button
                android:id="@+id/butPlus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="operatorEvent"
                android:text="+"
                android:background="@color/colorAccent"/>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/but1"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="1"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"/>
            <Button
                android:id="@+id/but2"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="2"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:background="@color/blueback"/>
            <Button
                android:id="@+id/but3"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:text="3"
                android:onClick="numberEvent"
                android:background="@color/blueback"/>
            <Button
                android:id="@+id/btnminus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="-"
                android:onClick="operatorEvent"
                android:background="@color/colorAccent"/>
        </TableRow>
    </TableLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/but0"
        android:layout_weight="2"
        android:layout_width="45pt"
        android:layout_height="30pt"
        android:text="0"
        android:onClick="numberEvent"
        android:layout_marginRight="2pt"

        android:background="@color/blueback"/>
    <Button
        android:id="@+id/butDot"
        android:layout_weight="2"
        android:layout_width="45pt"
        android:layout_height="30pt"
        android:layout_marginRight="2pt"
        android:text="."
        android:onClick="numberEvent"
        android:background="@color/blueback"/>
    <Button
        android:id="@+id/btEqual"
        android:layout_weight="2"
        android:layout_width="45pt"
        android:layout_height="30pt"
        android:text="="
        android:onClick="equalEvent"
        android:background="@color/colorAccent"/>
</LinearLayout>

</LinearLayout>